<div class="container">
  <p id="notice"><%= notice %></p>
  
  <p>
    <strong>Name:</strong>
    <%= @engineer.name %>
  </p>
  
  <p>
    <strong>Email:</strong>
    <%= @engineer.email %>
  </p>
  
  <p>
    <strong>Encrypted password:</strong>
    <%= @engineer.password_digest %>
  </p>
  
  <p>
    <strong>Self introduction:</strong>
    <%= @engineer.self_introduction %>
  </p>
  
  <p>
    <strong>Living place:</strong>
    <%= @engineer.living_place %>
  </p>
  
  <p>
    <strong>Fb uid:</strong>
    <%= @engineer.fb_uid %>
  </p>
  
  <p>
    <strong>Github uid:</strong>
    <%= @engineer.github_uid %>
  </p>
  
  <p>
    <strong>Age:</strong>
    <%= @engineer.age %>
  </p>
  
  <p>
    <strong>Phone number:</strong>
    <%= @engineer.phone_number %>
  </p>
  
  <p>
    <strong>Status:</strong>
    <%= @engineer.status %>
  </p>
  
  <p>
    <strong>Job history:</strong>
    <%= @engineer.job_history %>
  </p>
  
  <p>
    <strong>Notes:</strong>
    <%= @engineer.notes %>
  </p>
  
  <p>
    <strong>Is invitation enabled:</strong>
    <%= @engineer.is_invitation_enabled %>
  </p>
  
  <%= link_to 'Edit', edit_engineer_path(@engineer) %> |
  <%= link_to 'Back', engineers_path %><br>
  <% if session[:user] != nil %>
    <%= link_to 'メッセージを送る', new_message_path(:engineer_id => @engineer.id) %>
  <% else %>
    <button id='show-popup-login-form'>メッセージを送る</button>
  <% end %>
  
</div>

<!-- popup -->
<div class="popup hidden" id='popup-login-form'>
  エンジニアをお探しの企業の方はお問い合わせください
  <%= link_to 'お問い合わせ', new_inquiry_path %>
  <%= form_tag sign_in_path do %>
    <div class="field">
      <%= label_tag :email, 'login name' %>
      <%= text_field_tag :email , params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password, 'password' %>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="actions">
      <%= submit_tag "ログイン" %>
    </div>
  <% end %>
</div>
<!-- /popup -->

<%= javascript_include_tag 'engineers' %>
