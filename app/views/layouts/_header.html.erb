<div class="navbar">
  <div class="navbar__left">
    <div class="navbar__logo">
      逆求人(仮)
    </div>
  </div>
  <div class="navbar__right">
    <div class="navbar__list">
      <ul class="navbar__list">
        <li><%= link_to 'お問い合わせ', new_inquiry_path %></li>
        <li>
          <% if session[:user] == nil %>
            <%= form_tag sign_in_path do %>
              <div class="field">
                <%= label_tag :email, 'login name' %>
                <%= text_field_tag :email , params[:email] %>
              </div>
              <div class="field">
                <%= label_tag :password, 'password' %>
                <%= password_field_tag :password, params[:password] %>
              </div>
              <div class="actions">
                <%= submit_tag "ログイン" %>
              </div>
            <% end %>
            <li><%= link_to '登録', new_engineer_path %></li>
          <% else %>
            <%= button_to 'ログアウト', sign_out_path %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
